<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"

    tools:context="edu.rosehulman.pughck.simplecrypto.fragments.SavedStringsFragment">

    <View
        android:id="@+id/side_bar"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/side_bar" />

    <TextView
        android:id="@+id/title_bar_saved_strings"
        style="@style/TitleBarBanners"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/side_bar"
        android:layout_toRightOf="@+id/side_bar"
        android:text="@string/saved_strings" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/saved_strings_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title_bar_saved_strings"
        android:layout_alignRight="@+id/title_bar_saved_strings"
        android:layout_below="@+id/title_bar_saved_strings"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="-25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="-25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/side_bar"
        android:layout_toRightOf="@+id/side_bar"
        android:background="@drawable/stroke_bg" />

</RelativeLayout>
